<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="info.androidtv.libreelec">

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.software.leanback"
        android:required="false" /><!--true por defecto-->


    <application
        android:allowBackup="true"
        android:icon="@mipmap/leicon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".reboot"
            android:banner="@drawable/lebanner"
            android:icon="@drawable/leicon"
            android:label="@string/app_name"
            android:logo="@drawable/leicon"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
                <category android:name="android.intent.category.LAUNCHER" /><!--linea aÃ±adida-->
            </intent-filter>
        </activity>
    </application>

</manifest>